div(ng-include='"components/navbar/navbar.html"')

header#banner.hero-unit
  .container
    h1 schedule 
    img(src='assets/images/schedule.png', alt='schedule')

.container
  .row
    .col-lg-12
      h1.page-header Upcomming Events:
      div.bootcards-list
        div.panel.panel-default
          div.list-group(ng-repeat='event in upComingEvents')
            a.list-group-item(ng-switch='event.type')
              img.img-rounded.pull-left(ng-switch-when='event', src='assets/images/ico-appointment.png')
              img.img-rounded.pull-left(ng-switch-when='appointment' src='assets/images/ico-client.png')
              h4.list-group-item-heading {{ event.title }}
              p.list-group-item-text {{ event.start | calendar }}
              div(ng-switch-when="appointment")
                {{ event.service.description }}
              div(ng-if="event.allDay")
                p ( This is a day long event )
